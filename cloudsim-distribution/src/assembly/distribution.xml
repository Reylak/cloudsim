<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
            http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>

    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>${project.parent.basedir}/LICENSE</source>
            <!-- empty outDirectory tag means "root of the output archive" -->
            <outputDirectory />
            <fileMode>0644</fileMode>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>src/main</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory/>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.cloudbus.cloudsim:cloudsim-library:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>examples</outputDirectory>
            <includes>
                <include>org.cloudbus.cloudsim:cloudsim-examples:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>org.cloudbus.cloudsim:cloudsim-library:javadoc</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>